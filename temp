# seeding after migration
from flasknetwork import db
from flasknetwork.models import Tag, TagSentiment
   
tags_data = [
    # Your original tags
    ("Group Projects", TagSentiment.positive),
    ("Clear Grading Criteria", TagSentiment.positive),
    ("Lots of Reading", TagSentiment.negative),
    ("Amazing Lectures", TagSentiment.positive),
    ("Tough Grader", TagSentiment.negative),
    ("Bamboozling Exam", TagSentiment.negative),
    # RateMyProfessor-style tags
    ("Inspirational", TagSentiment.positive),
    ("Gives Good Feedback", TagSentiment.positive),
    ("Accessible Outside Class", TagSentiment.positive),
    ("Online Savvy", TagSentiment.positive),
    ("Participation Matters", TagSentiment.positive),
    ("Recorded Lectures", TagSentiment.positive),
    ("Lots of Homework", TagSentiment.negative),
    ("Test Heavy", TagSentiment.negative),
    ("Beware of Pop Quizzes", TagSentiment.negative),
    ("Get Ready To Read", TagSentiment.negative),
    ("Lecture Heavy", TagSentiment.negative),
    ("Attendance Mandatory", TagSentiment.negative),
]

for name, sentiment in tags_data:
    tag = Tag(name=name, sentiment=sentiment)
    db.session.add(tag)
db.session.commit()